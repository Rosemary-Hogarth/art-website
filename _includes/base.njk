    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <title>{{ title }}</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
   <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ '/home/' | url }}">Julius Heinemann</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item {% if page.url == '/index/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/index/' | url }}">EXHIBITIONS</a>
            </li>
            <li class="nav-item {% if page.url == '/works/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/works/' | url }}">WORKS</a>
            </li>
            <li class="nav-item {% if page.url == '/publications/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/publications/' | url }}">PUBLICATIONS</a>
            </li>
            <li class="nav-item {% if page.url == '/about/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/about/' | url }}">ABOUT</a>
            </li>
            <li class="nav-item {% if page.url == '/contact/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/contact/' | url }}">CONTACT</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">ADMIN</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <div class="main-container {% if removeMainPadding %} no-padding{% endif %}">
      <main>
          {{ content | safe }}
      </main>

      <footer>
          <!-- Add footer content -->
      </footer>
    </div>

    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/carousel.js"></script>
       <script>
    document.addEventListener('DOMContentLoaded', function () {
      Fancybox.bind("[data-fancybox]", {
        // Optional Fancybox settings
      });
    });
  </script>

</body>
</html>
