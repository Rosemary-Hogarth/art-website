---
layout: base.njk
pagination:
  data: collections.exhibitions
  size: 1
  alias: exhibition
url: /exhibitions
---

<div class="exhibition-details-show">
  <h1 class="exhib-details-name">{{ exhibition.data.title }}</h1>
  <p class="exhib-details-location">{{ exhibition.data.location }}</p>
  <p class="exhib-details-year">{{ exhibition.data.year }}</p>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    {% for image in exhibition.data.images %}
      <div class="carousel-item {% if loop.first %}active{% endif %}">
        <img class="d-block w-100" src="{{ image }}" alt="Image from {{ exhibition.data.title }}">
      </div>
    {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
